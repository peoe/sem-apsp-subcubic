{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make LaTeX",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "all",
		        "-j"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "Make Titlepage"
            ],
        },
        {
            "label": "Make Titlepage",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": "latexmk",
            "args": [
                "-shell-escape",
                "-pdf",
                "config/titlepage/titlepage.tex"
            ]
        }
    ],
    "presentation": {
        "reveal": "silent",
        "clear": true
    }
}
